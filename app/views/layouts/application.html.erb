  </head>
  <body>
    <%= render 'layouts/header' %>

    <div class="container">
      <%= yield %>
    </div>

    <!-- <%= render 'layouts/footer' %> -->

    <%= javascript_include_tag 'application', 'data-turbolinks-eval' => false %>
  </body>
</html>